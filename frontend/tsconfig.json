{
    "extends": [
        "@vue/tsconfig/tsconfig.json"
    ],
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "element-plus/global"
        ],
        "noImplicitAny": false,
        "skipLibCheck": true,
        "ignoreDeprecations": "5.0",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "target": "esnext"
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}